{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "esbuild.config.*",
    "eslint.config.*",
    "jest.config.*",
    "prettier.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowJs": true
  }
}
