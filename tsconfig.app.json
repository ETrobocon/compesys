{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "lib": ["es2023"],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "Bundler"
  }
}
